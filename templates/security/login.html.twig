{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="block">
		<form action="{{path('login')}}" method="post">
		<h2 class="pb-30">Connexion</h2>

			<div class="form-row">
				<label for="email">Email</label>
				<input type="text" id="email" autofocus name="_username" value="{{username}}" required autofocus>
			</div>
			<div class="form-row">
				<label for="password">Mot de passe</label>
				<input type="password" id="password" name="_password" required>
			</div>
			<div class="form-row">
				<label for="remember_me">
					<input type="checkbox" id="remember_me" name="_remember_me">
					Se souvenir de moi</label>
			</div>
			<input type="hidden" name="_csrf_token" value="{{csrf_token('authenticate')}}">
			{% if error %}
				<ul class="form-errors pb-20">
					<li>{{ error.messageKey| trans(error.messageData, 'security') }}</li>
				</ul>
			{% endif %}
			<button class="btn btn-primary mr-10" type="submit">Connexion</button>
			<small>
				<a href="{{path('signup')}}">Vous n'avez pas encore de compte ?</a>
			</small>
		</form>
	</div>
{% endblock %}
